---
import '@fontsource-variable/raleway';
import '@fontsource-variable/inter';

interface Props {
  name: string;
  content: string;
}

const { name, content } = Astro.props;
---

<li>
  <div>
    <svg viewBox="0 0 512 512"
      ><path
        fill="currentColor"
        d="M464 32H336c-26.5 0-48 21.5-48 48v128c0 26.5 21.5 48 48 48h80v64c0 35.3-28.7 64-64 64h-8c-13.3 0-24 10.7-24 24v48c0 13.3 10.7 24 24 24h8c88.4 0 160-71.6 160-160V80c0-26.5-21.5-48-48-48m-288 0H48C21.5 32 0 53.5 0 80v128c0 26.5 21.5 48 48 48h80v64c0 35.3-28.7 64-64 64h-8c-13.3 0-24 10.7-24 24v48c0 13.3 10.7 24 24 24h8c88.4 0 160-71.6 160-160V80c0-26.5-21.5-48-48-48"
      ></path></svg
    >
    <p>{content}</p>
  </div>
  <h4>{name}</h4>
</li>
<style>
  span {
    font-size: 4rem;
  }
  svg {
    width: 1.4rem;
    height: 1.4rem;
    color: var(--logo-yellow-svg-color);
  }
  div {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }
  h4 {
    font-size: 1rem;
    font-weight: 400;
  }

  li {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    max-width: 40ch;
    text-align: center;
  }
  p {
    font-size: 1.2rem;
    font-weight: 600;
  }

  @media screen and (min-width: 600px) {
    p {
      font-size: 1.6rem;
    }
    h4 {
      font-size: 1.4rem;
    }
  }
</style>
