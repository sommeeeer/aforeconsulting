---
interface Props {
  title: string;
  content: string;
}

const { title, content } = Astro.props;
---

<li>
  <h4>{title}</h4>
  <p>{content}</p>
</li>
<style>
  li {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  h4 {
    font-weight: 600;
  }
  p {
    font-size: 1.2rem;
    font-weight: 400;
    line-height: 1.8;
  }

  @media screen and (min-width: 600px) {
    p {
      font-size: 1.6rem;
    }
    h4 {
      font-size: 1.4rem;
    }
  }
</style>
