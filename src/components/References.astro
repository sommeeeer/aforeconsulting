---

<section class="references">
  <h3>References</h3>
  <ul>
    {
      references.map((ref) => (
        <Reference name={ref.name} content={ref.content} />
      ))
    }
  </ul>
</section>
<style>
  .references {
    padding: 6rem 2rem;
    display: flex;
    align-items: center;
    flex-direction: column;
    gap: 4rem;
  }

  h3 {
    font-size: 2rem;
    color: var(--logo-gray-color);
  }

  h3::after {
    content: '';
    display: block;
    width: 40%;
    height: 2px;
    background-color: var(--logo-gray-color);
    margin-inline: auto;
  }

  ul {
    display: flex;
    flex-direction: column;
    list-style: none;
    gap: 4rem;
    padding: 0;
  }

  @media screen and (min-width: 800px) {
    ul {
      flex-direction: row;
      gap: 8rem;
    }
  }
</style>
